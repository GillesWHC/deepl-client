{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "**/*.test.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
